<div class="container">
  <div class="col-xs-4 col-xs-offset-4">
    <h2 class='login'>Log in</h2>

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, hide_label: true %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in",class: "btn btn-primary col-xs-4 col-xs-offset-4"  %>
      </div>
    <% end %>
    <br>
    <hr>

    <%= render "devise/shared/links" %>
  </div>
</div>
