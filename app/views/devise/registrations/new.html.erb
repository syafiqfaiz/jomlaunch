<div class="container">
  <div class="col-xs-4 col-xs-offset-4">
    <h2 class='login'>Sign up</h2>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "Password: 8 characters min "%>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: "Password confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up",class: "btn btn-primary col-xs-4 col-xs-offset-4"  %> <br>
      </div>
    <% end %>
  </div>
</div>
